<div class="grid">
  <div class="grid__item medium-up--one-quarter">
    <div>{{ comment.author }}</div>
    <div class="comment__date">
      {{ comment.created_at | time_tag: format: 'month_day_year' }}
    </div>
  </div>
  <div class="grid__item medium-up--three-quarters">
    <div class="rte">
      {{ comment.content }}
    </div>
  </div>
</div>
